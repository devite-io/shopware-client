{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "#types/*": ["types/*"],
      "#clients/*": ["src/clients/*"],
      "#payloads/*": ["src/payloads/*"],
      "#auth/*": ["src/auth/*"],
      "#http/*": ["src/http/*"],
      "#utils/*": ["src/utils/*"]
    }
  },
  "include": ["types/**/*.ts"]
}
