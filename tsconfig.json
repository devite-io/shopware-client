{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "#types": ["./types"],
      "#utils": ["./src/utils"],
      "#clients": ["./src/clients"],
      "#payloads": ["./src/payloads"]
    }
  },
  "include": ["./src/**/*.ts", "./types/**/*.ts"]
}
